{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "noErrorTruncation": true,
    "noUncheckedIndexedAccess": true
  },
  "paths": {
    "src": "./src"
  }
}
